                WidthRequest="400" 
                HeightRequest="40"
                />

            <!-- Row 9 -->
            <Button 
                IsVisible="False" 
                Grid.Row="9" 
                Grid.Column="0" 
                Text="Tenant 17 5th Floor" 
                Clicked="OnNavigateButtonClicked" 
                WidthRequest="400" 
                HeightRequest="40"
                />
            
            <Button 
                IsVisible="False" 
                Grid.Row="9" 
                Grid.Column="2" 
                Text="Tenant 18 5th Floor" 
                Clicked="OnNavigateButtonClicked" 
                WidthRequest="400" 
                HeightRequest="40"
                />
            
        </Grid>
    </VerticalStackLayout>

</ContentPage>
