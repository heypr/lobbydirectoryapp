<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="testmauiproject.MainPage">

    <VerticalStackLayout Padding="30,0" Spacing="25" BackgroundColor="Black">
        <!-- Your Labels -->
        <Image 
            Source="lincoln_logo_yellow.png"
            />

        <Label
            Text="South Park Center&#10;Building T"
            Style="{StaticResource Headline}"
            HorizontalOptions="StartAndExpand"
            HorizontalTextAlignment="Start"
            FontSize="90"
            SemanticProperties.HeadingLevel="Level1"
            SemanticProperties.Description="Welcome text."
            Scale="1.07"
            TextColor="White"
            />

        <Label
            Text="9400 SouthPark &#10;Center Loop"
            Style="{StaticResource Headline}"
            FontFamily="WalterNeue-Normal"
            TextColor="White"
            HorizontalOptions="CenterAndExpand"
            HorizontalTextAlignment="Start"
            FontSize="50"
            TranslationX="235"
            TranslationY="-150"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Welcome text."
            Scale="1.1"
            />
        
        <Label 
            Text="{Binding CurrentDateTime}"
            TextColor="#FFCA00"
            FontSize="50"
            HorizontalOptions="Start"
            TranslationX="10"
            TranslationY="-80"
            />
        
        <!-- Grid for button layout -->
        <Grid
            x:Name="Buttons"
            RowSpacing="40"
            ColumnSpacing="40"
            HorizontalOptions="Center"
            VerticalOptions="Center">

            <Grid.RowDefinitions>
                <!-- Define 10 rows -->
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
                <RowDefinition 
                    Height="Auto" 
                    />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <!-- Define four columns (two for buttons, two for gaps) -->
                <ColumnDefinition 
                    Width="*" 
                    />
                <ColumnDefinition 
                    Width="Auto" 
                    />
                <!-- Gap -->
                <ColumnDefinition 
                    Width="*" 
                    />
                <ColumnDefinition 
                    Width="Auto" 
                    />
                <!-- Gap -->
            </Grid.ColumnDefinitions>

            <!-- Define Buttons -->
            <!-- Row 0 -->
            <Button 
                IsVisible="True" 
                Grid.Row="0" 
                Grid.Column="0" 
                Text="Leasing Information" 
                TextColor="Black" 
                Clicked="OnNavigateButtonClicked" 
                WidthRequest="400" 
                HeightRequest="60"
                BackgroundColor="White"
                />
            
            <Button 
                IsVisible="True" 
                Grid.Row="0" 
                Grid.Column="2" 
                Text="Local Amenities" 
                TextColor="Black"
                Clicked="OnNavigateButtonClicked" 
                WidthRequest="400"  
                HeightRequest="60"
                BackgroundColor="White" 
                />

            <!-- Row 1 -->
            <Button 
                IsVisible="False" 
                Grid.Row="1" 
                Grid.Column="0" 
                Text="Tenant 1 1st floor" 
                Clicked="OnNavigateButtonClicked" 
                WidthRequest="400" 
                HeightRequest="40"
                />
            
            <Button 
                IsVisible="False" 
                Grid.Row="1" 
                Grid.Column="2" 
                Text="Tenant 2 1st floor" 
                Clicked="OnNavigateButtonClicked" 
                WidthRequest="400" 
                HeightRequest="40"
                />
            
            <!-- Row 2 -->
            <Button 
                IsVisible="False" 
                Grid.Row="2" 
                Grid.Column="0" 
                Text="Tenant 3 1st floor" 
                Clicked="OnNavigateButtonClicked" 
